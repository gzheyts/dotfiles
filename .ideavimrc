set hlsearch
set scrolloff=3
set ignorecase smartcase
set showmode
set history=1000

" emulate vim-surround plugin
set surround

"Disabling old keys
inoremap <esc> <nop>

let mapleader= ","

"Breakpoints
noremap <leader>bl :action ToggleLineBreakpoint<cr>
noremap <leader>bm :action ToggleMethodBreakpoint<cr>
noremap <leader>bf :action ToggleFieldBreakpoint<cr>
noremap <leader>be :action ToggleBreakpointEnabled<cr>
noremap <leader>bv :action ViewBreakpoints<cr>

"Bookmarks 
noremap <leader>Bt :action ToggleBookmark<cr>
noremap <leader>Bm :action ToggleBookmarkWithMnemonic<cr>
noremap <leader>Bv :action ShowBookmarks<cr>
noremap <leader>Bn :action GotoNextBookmark<cr>
noremap <leader>Bp :action GotoPreviousBookmark<cr>

inoremap jk <esc>
inoremap ол <esc>

" easy buffer scrolling
noremap K 5k
noremap J 5j

" easy system clipboard copy/paste
noremap <space>y "*y
noremap <space>Y "*Y
noremap <space>p "*p
noremap <space>P "*P

" easy window navigation
nnoremap <c-l> <c-w>l
nnoremap <c-j> <c-w>j
nnoremap <c-h> <c-w>h
nnoremap <c-k> <c-w>k
nnoremap <a-h> gT
nnoremap <a-l> gt

" clear the search buffer when hitting return
nnoremap <space><cr> :nohlsearch<cr>

" options
nnoremap cow :action EditorToggleUseSoftWraps<cr>
nnoremap col :action EditorToggleShowWhitespaces<cr>

" actions
nnoremap <space>q :action CloseContent<cr>
nnoremap <space>Q :action ReopenClosedTab<cr>
nnoremap <space>j :action EditorJoinLines<cr>
nnoremap <space>\ :action VimFilePrevious<cr>
nnoremap <space>E :action Switcher<cr>
nnoremap <space>t :action FileStructurePopup<cr>

nnoremap \p :action ParameterInfo<cr>
nnoremap ]p :action NextParameter<cr>
nnoremap [p :action PrevParameter<cr>

nnoremap \f :action FileStructurePopup<cr>
nnoremap \a :action AddToFavoritesPopup<cr>

nnoremap \spm :action ShowPopupMenu<cr>

" Call Hierarchy Popup menu
" Java Method Hierarchy menu
" Method Hierarchy Popup Menu
" Type Hierarchy Popup Menu

" <C-S-H>
nnoremap \m :action MethodHierarchy<cr>
" <C-H>
nnoremap \t :action TypeHierarchy<cr>
"<A-C-H>
nnoremap \c :action CallHierarchy<cr>

"  <A-C-S-T>
nnoremap \rp  :action Refactorings.QuickListPopupAction<cr> 
nnoremap \vcs  :action Vcs.QuickListPopupAction<cr> 

nnoremap ga :action GotoAction<cr>
nnoremap gs :action GotoSymbol<cr>
nnoremap gf :action GotoFile<cr>
nnoremap gr :action RecentFiles<cr>
nnoremap gc :action GotoClass<cr>
nnoremap gi :action GotoImplementation<cr>
nnoremap gsm :action GotoSuperMethod<cr>
nnoremap gtd :action GotoTypeDeclaration<cr>

" code navigation
nnoremap <space>] :action GotoImplementation<cr>
nnoremap <space>[ :action GotoSuperMethod<cr>
nnoremap <space>u :action FindUsages<cr>
nnoremap <space>U :action ShowUsages<cr>
nnoremap <space>gt :action GotoTest<cr>
nnoremap \r :action RunClass<cr>
nnoremap \d :action Debug<cr>
nnoremap [] :action MethodUp<cr>
nnoremap ][ :action MethodDown<cr>

" code refactoring
nnoremap <space>rr :action RenameElement<cr>

" unimpaired mappings
nnoremap [<space> O<esc>j
nnoremap ]<space> o<esc>k
nnoremap [q :action PreviousOccurence<cr>
nnoremap ]q :action NextOccurence<cr>

" built-in navigation to navigated items works better
nnoremap <c-o> :action Back<cr>
nnoremap <c-i> :action Forward<cr>
" but preserve ideavim defaults
nnoremap g<c-o> <c-o>
nnoremap g<c-i> <c-i>

" built in search looks better
nnoremap / :action Find<cr>
" but preserve ideavim search
nnoremap g/ /

nnoremap \<c-r> :action Git.Revert<cr>
nnoremap ZZ :action Exit<cr>

noremap <c-q>  :action QuickJavaDoc<cr>
noremap ss     :source ~/.ideavimrc<cr>

